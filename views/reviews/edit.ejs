<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/stars.css">
    <div class="row">
        <h1 class="text-center">Edit Review</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=cmp%>/reviews/<%=rev._id%>?_method=PUT" method="POST" class="mb-3 needs-validation" id="new-review"
                novalidate>
                <!-- <div class="mb-3">
                            <label class="form-label" for="rating">Rating</label>
                            <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
                        </div> -->
                <fieldset class="starability-basic">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                        aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" <% if (rev.rating == 1){ %> checked="1" <%}%> />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" <% if (rev.rating == 2){ %> checked="1" <%}%> />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" <% if (rev.rating == 3){ %> checked="1" <%}%> />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4"  <% if (rev.rating == 4){ %> checked="1" <%}%>/>
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5"  <% if (rev.rating == 5){ %> checked="1" <%}%>/>
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
                <div class="mb-3">
                    <label class="form-label" for="body">Review Text</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" val="<%=rev.body%>" required><%=rev.body%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>